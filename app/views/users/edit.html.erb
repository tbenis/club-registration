<%= render partial: 'layouts/errors', locals: {obj: @user} %>
<h4>Update Your Profile Information</h4> <br>
<%= form_for(@user) do |f| %>
  <div class="form-group">
    <label for="user_name">Name</label>
    <%= f.text_field :name, class:"form-control"%> <br>
    <label for="user_email">Email</label>
    <%= f.email_field :email, class:"form-control"%> <br>
    <label for="user_avatar">Profile pic</label> <br>
    <%= f.file_field :avatar, class:"form-control" %>
  </div> <br>
  <%= f.submit "Update your info", class: "btn btn-primary"%>
<% end %>
<br><br>
<%= link_to '< Back to your profile page', user_path(params[:id])%>

